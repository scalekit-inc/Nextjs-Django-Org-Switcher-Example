{
  "name": "org-switcher-app",
  "version": "1.0.0",
  "description": "Scalekit Organization Switcher Demo with Django + Next.js",
  "scripts": {
    "install:all": "cd backend && pip install -r requirements.txt && cd ../frontend && npm install",
    "setup": "cd backend && python manage.py migrate",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" --names \"BACKEND,FRONTEND\" --prefix-colors \"blue,green\"",
    "dev:backend": "cd backend && python manage.py runserver",
    "dev:frontend": "cd frontend && npm run dev",
    "start": "npm run dev"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/scalekit-inc/scalekit-django-nextjs-example"
  },
  "keywords": [
    "scalekit",
    "django",
    "nextjs",
    "authentication",
    "organization-switching",
    "sso"
  ],
  "author": "Scalekit",
  "license": "MIT"
}
